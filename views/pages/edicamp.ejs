<!--página de edição de campanhas para criar ou excluir existentes -->

<!DOCTYPE html>
<html lang="pt-BR">
<%- include("../patrials/head") %>

    <body class="desfocar">
        <footer class="footer-top">
        <a href="/">
        <img src="/static/maos_logo.png" alt="Logo" class="footer-logo">
        <a href="/">
    <img src="/static/sair.png" alt="Voltar" class="footer-sair">
</a>
        </a>
        </footer>



        <center>
         <div class="sub-header">

            <a href="/info">SOBRE O SITE</a>
            <a href="/cp">CAMPANHAS PARTICIPANTES</a>
            <a href="/edicamp">GERENCIAR CAMPANHAS</a>
            <a href="/ediusua">GERENCIAR USUÁRIOS</a>

        </div>
            <div class="page-box"><br>     
                <h1>CRIAR CAMPANHAS</h1>

                <% if (mensagem) { %>
                    <p style="color: yellow;">
                        <%= mensagem %>
                    </p>
                    <% } %>

                        <form id="formCampanha" action="/edicamp/add" method="POST" enctype="multipart/form-data">

    <table class="camp-table">

        <tr>
            <td><label for="nome">Nome da Campanha:</label></td>
            <td><input type="text" name="nome" id="nome" required></td>
        </tr>

        <tr>
            <td><label for="descricao">Descrição:</label></td>
            <td><textarea name="descricao" id="descricao" required></textarea></td>
        </tr>

        <tr>
            <td><label for="imagem">Imagem:</label></td>
            <td><input type="file" name="imagem" id="imagem" accept="image/*" required></td>
        </tr>
    </table>

    <h3 style="color:#ff6600; margin-top:20px;">Itens que podem ser doados:</h3>

    <table id="itensTable" class="itens-table">

        <tr>
            <th>Item</th>
            <th>Pontos</th>
            <th></th>
        </tr>

        <tr>
            <td><input type="text" name="itens[0][nome]" required></td>
            <td><input type="number" name="itens[0][pontos]" required></td>
            <td><button type="button" onclick="addItem()">+</button></td>
        </tr>
    </table>

    <button type="submit">PROSSEGUIR</button>

</form>

            </div>          
        </center>

        <%- include("../patrials/footer") %>
    </body>

</html>